        /* JavaScript: محرك تشغيل الشات بوت */
        function toggleChat() {
            var box = document.getElementById('chat-box');
            box.style.display = (box.style.display === 'none') ? 'flex' : 'none';}
        function sendMsg() {
            var input = document.getElementById('userIn');
            var msgArea = document.getElementById('messages');
            if(input.value.trim() !== "") {msgArea.innerHTML += "<div><b>أنت:</b> " + input.value + "</div>";
                msgArea.innerHTML += "<div><b>البوت:</b> شكراً لسؤالك! سأقوم بالتحقق من " + input.value + " والرد عليك فوراً.</div>";
                input.value = "";
                msgArea.scrollTop = msgArea.scrollHeight;}
        }
    </script>
